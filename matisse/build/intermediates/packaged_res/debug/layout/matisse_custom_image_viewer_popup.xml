<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBar_fillStatusBar="true"
        app:titleBar_titleBarColor="@color/preview_bottom_toolbar_bg"
        app:titleBar_statusBarColor="@color/preview_bottom_toolbar_bg"
        app:titleBar_showBottomLine="false"
        app:titleBar_statusBarMode="light"
        app:titleBar_leftType="imageButton"
        app:titleBar_leftImageResource="@drawable/ic_arrow_back_white_24dp"
        app:titleBar_centerType="textView"
        app:titleBar_centerTextColor="@android:color/white"
        app:titleBar_centerSubTextColor="#f8f8f8"
        />

    <FrameLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/preview_bottom_toolbar_bg"
        android:elevation="4dp">

        <com.zpj.matisse.ui.widget.CheckView
            android:id="@+id/check_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:text="size"
            android:textSize="16sp"/>



        <TextView
            android:id="@+id/button_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/ok"
            android:textSize="16sp"/>

    </FrameLayout>

</RelativeLayout>