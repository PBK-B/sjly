<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:paddingBottom="50dp"
        app:canLoop="true"
        app:open_mz_mode="true" />

<!--    android:background="@drawable/gradient_bg"-->

    <com.lihang.ShadowLayout
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="12dp"
        app:hl_cornerRadius="8dp"
        app:hl_shadowColor="#80cccccc"
        app:hl_shadowLimit="4dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:divider="@drawable/divider_vertical_bg"
            app:dividerPadding="16dp"
            app:showDividers="middle">

            <TextView
                android:id="@+id/tv_common_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_common_app"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/color_text_major"
                android:text="常用"
                android:background="?android:attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tv_recent_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_others_download"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/color_text_major"
                android:text="看看"
                android:background="?android:attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tv_subjects"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_app_topic"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/color_text_major"
                android:text="专题"
                android:background="?android:attr/selectableItemBackground"
                />

            <TextView
                android:id="@+id/tv_collections"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_app_collection"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/color_text_major"
                android:text="应用集"
                android:background="?android:attr/selectableItemBackground"
                />

        </android.support.v7.widget.LinearLayoutCompat>

    </com.lihang.ShadowLayout>

</LinearLayout>