<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fillStatusBar="true"
        app:titleBarColor="@color/colorPrimary"
        app:statusBarColor="@color/colorPrimary"
        app:showBottomLine="false"
        app:statusBarMode="light"
        app:centerType="customView"
        app:centerCustomView="@layout/layout_magic_indicator"
        app:rightType="customView"
        app:rightCustomView="@layout/layout_tools"
        />

<!--    app:leftType="customView"-->
<!--    app:leftCustomView="@layout/layout_left"-->

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>