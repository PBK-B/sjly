<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <com.zpj.shouji.market.ui.widget.DisInterceptNestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">


            <com.qyh.qtablayoutlib.QTabLayout
                android:id="@+id/tab_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                app:q_tabIndicatorAnimation="true"
                app:q_tabIndicatorColor="@color/colorPrimary"
                app:q_tabIndicatorWidth="20dp"
                app:q_tabGravity="center"
                app:q_tabPaddingStart="15dp"
                app:q_tabPaddingEnd="15dp"
                app:q_indicatorMarginTop="0dp"
                app:q_tabSelectedTextColor="@color/colorPrimary"
                app:q_tabTextColor="#333333"
                app:q_tabTextSize="14sp"
                app:q_tabMode="scrollable"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/tag_ocreate_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="Tags"
                    android:textColor="#cc333333"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tag_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </com.zpj.shouji.market.ui.widget.DisInterceptNestedScrollView>

    <com.zpj.shouji.market.ui.widget.NoScrollViewPager
        android:id="@+id/uc_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5" />

</LinearLayout>