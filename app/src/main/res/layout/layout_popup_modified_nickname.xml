<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet_dialog"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改昵称"
            android:textColor="@color/color_text_major"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />

        <com.zpj.widget.tinted.TintedImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/actionBarItemBackground"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:tint="@color/light_gray_10"
            />

    </RelativeLayout>

    <View style="@style/layout_shadow_bottom"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 昵称只能由汉字、英文、数字和下划线组成\n* 不超过15个字符\n* 不得包含违规字符"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        />

    <com.zpj.shouji.market.ui.widget.input.AccountInputView
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="因系统原因，用户昵称只允许修改三次，请乐友三思！"
        android:textColor="@color/color_text_major"
        android:drawableStart="@drawable/ic_info_black_24dp"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        />

    <com.zpj.shouji.market.ui.widget.input.SubmitView
        android:id="@+id/sv_submit"
        style="@style/button_submit"
        android:text="确认修改"
        app:sv_bindEditText1="@+id/et_account"
        android:layout_margin="16dp"
        />

</LinearLayout>