<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/backgroundColorCard"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/iv_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:corner_radius="8dp"
                />

<!--            app:border_color="#80cccccc"-->
<!--            app:border_width="1dp"-->
<!--            app:is_circle="true"-->

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="应用名"
                android:textColor="?attr/textColorMajor"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="3"
            android:text="100MB"
            android:textColor="?attr/textColorNormal"
            android:textSize="12sp"
            android:layout_marginVertical="8dp"
            />

        <com.zpj.shouji.market.ui.widget.DrawableTintTextView
            android:id="@+id/tv_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="end|center_vertical"
            android:text="10个应用"
            android:textColor="?attr/textColorMajor"
            android:drawableEnd="@drawable/ic_software_checked"
            android:drawablePadding="8dp"
            app:drawable_tint_color="@color/colorPrimary"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>