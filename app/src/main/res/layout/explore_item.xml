                            android:text="下载"
                            android:textColor="#ffffff"
                            app:pressedBackgroundColor="#8024aa42"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:textSize="12sp"
                            />

