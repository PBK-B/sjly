<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blur_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <com.zpj.shouji.market.ui.widget.MenuActionButton
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        android:layout_marginBottom="64dp"
        app:menu_action_title="动态"
        app:menu_action_icon="@drawable/ic_discuss"
        app:menu_action_color="@color/light_blue_1"
        />

    <com.zpj.shouji.market.ui.widget.MenuActionButton
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        android:layout_marginBottom="64dp"
        app:menu_action_title="应用集"
        app:menu_action_icon="@drawable/ic_list"
        app:menu_action_color="@color/light_red_1"
        />

    <com.zpj.shouji.market.ui.widget.MenuActionButton
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_4"
        android:layout_marginBottom="64dp"
        app:menu_action_title="乐图"
        app:menu_action_icon="@drawable/ic_picture"
        app:menu_action_color="@color/light_blue_2"
        />

    <com.zpj.shouji.market.ui.widget.MenuActionButton
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintStart_toEndOf="@id/btn_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="64dp"
        app:menu_action_title="私聊"
        app:menu_action_icon="@drawable/ic_chat"
        app:menu_action_color="@color/light_purple"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/add_button"
        app:backgroundTint="@color/transparent"
        app:borderWidth="0dp"
        app:elevation="10dp"
        app:fabCustomSize="40dp"
        app:maxImageSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>