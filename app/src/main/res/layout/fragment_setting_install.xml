<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/layout_header"/>

    <com.zpj.dialog.view.ElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        >

        <www.linwg.org.lib.LCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:shadowSize="16dp"
            app:shadowColor="#5f6379"
            app:shadowStartAlpha="10"
            app:cornerRadius="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_install_downloaded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="下载完成立即安装"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_auto_delete_apk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="自动删除安装包"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_user_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="下载设置"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_auto_install"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="无障碍自动安装"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_root_install"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="ROOT安装"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

            </LinearLayout>

        </www.linwg.org.lib.LCardView>


    </com.zpj.dialog.view.ElasticScrollView>



</LinearLayout>