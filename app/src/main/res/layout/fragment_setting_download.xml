<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/layout_header"/>

    <com.zpj.dialog.view.ElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        android:padding="8dp"
        >

        <www.linwg.org.lib.LCardView
            style="@style/setting_card_style"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_download_folder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="下载位置"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_max_downloading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="最大任务数"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_max_thread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="最大线程数"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_install_downloaded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="下载完成后安装"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_show_downloaded_ring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="下载完成声音提示"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

                <com.leon.lib.settingview.LSettingItem
                    android:id="@+id/item_show_downloaded_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setting_showUnderLine="false"
                    app:setting_leftText="通知栏显示下载进度"
                    app:setting_leftTextColor="@color/color_text_major"
                    app:setting_showInfoBtn="false"
                    />

            </LinearLayout>

        </www.linwg.org.lib.LCardView>


    </com.zpj.dialog.view.ElasticScrollView>

</LinearLayout>