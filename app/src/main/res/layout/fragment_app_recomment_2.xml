<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <com.zpj.widget.statelayout.StateLayout
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zpj.shouji.market.ui.widget.ElasticScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingTop="80dp"
                >

                <!--            <include layout="@layout/layout_app_header"/>-->

<!--                <com.zhouwei.mzbanner.MZBannerView-->
<!--                    android:id="@+id/banner"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="160dp"-->
<!--                    app:canLoop="true"-->
<!--                    app:open_mz_mode="true"-->
<!--                    android:layout_marginVertical="8dp"-->
<!--                    />-->

                <com.geek.banner.Banner
                    android:id="@+id/banner2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    app:banner_auto_play="true"
                    app:banner_default_image="@drawable/bga_pp_ic_holder_light"
                    app:banner_expose_width="20dp"
                    app:banner_interval_time="5000"
                    app:banner_multi_anim="ScaleIn"
                    app:banner_page_spacing="14dp"
                    app:banner_scroll_time="1000"
                    app:banner_show_indicator="true"
                    app:indicator_default_drawable="@color/white"
                    app:indicator_select_drawable="@color/colorPrimary"
                    app:banner_show_model="MZ_EFFECT"
                    app:layout_scrollFlags="scroll"
                    />



            </LinearLayout>

        </com.zpj.shouji.market.ui.widget.ElasticScrollView>

<!--        <View style="@style/layout_shadow_bottom"/>-->

    </com.zpj.widget.statelayout.StateLayout>

    <com.zpj.widget.toolbar.ZToolBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:z_toolbar_fillStatusBar="true"
        app:z_toolbar_titleBarColor="#aaffffff"
        app:z_toolbar_statusBarColor="#aaffffff"
        app:z_toolbar_showBottomLine="false"
        app:z_toolbar_statusBarMode="dark"
        app:z_toolbar_leftType="textView"
        app:z_toolbar_leftText="应用"
        app:z_toolbar_leftTextColor="@color/colorPrimary"
        app:z_toolbar_leftTextSize="18sp"
        app:z_toolbar_rightType="customView"
        app:z_toolbar_rightCustomView="@layout/layout_tools_dark"
        />

</FrameLayout>