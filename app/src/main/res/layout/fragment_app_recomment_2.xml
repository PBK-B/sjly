<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <com.zpj.widget.toolbar.ZToolBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:z_toolbar_fillStatusBar="true"
        app:z_toolbar_titleBarColor="@android:color/white"
        app:z_toolbar_statusBarColor="@android:color/white"
        app:z_toolbar_showBottomLine="false"
        app:z_toolbar_statusBarMode="dark"
        app:z_toolbar_leftType="textView"
        app:z_toolbar_leftText="应用"
        app:z_toolbar_leftTextColor="@color/colorPrimary"
        app:z_toolbar_leftTextSize="18sp"
        app:z_toolbar_rightType="customView"
        app:z_toolbar_rightCustomView="@layout/layout_tools_dark"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zpj.shouji.market.ui.widget.ElasticScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--            <include layout="@layout/layout_app_header"/>-->




            </LinearLayout>

        </com.zpj.shouji.market.ui.widget.ElasticScrollView>

        <View style="@style/layout_shadow_bottom"/>

    </FrameLayout>

</LinearLayout>