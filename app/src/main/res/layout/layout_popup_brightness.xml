<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:hl_cornerRadius="8dp"
    app:hl_shadowLimit="4dp"
    app:hl_shadowBackColor="@android:color/white"
    app:hl_shadowColor="#80cccccc"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zpj.widget.toolbar.ZToolBar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:z_toolbar_titleBarColor="@color/transparent"
            app:z_toolbar_isLightStyle="false"
            app:z_toolbar_centerType="textView"
            app:z_toolbar_centerText="App亮度"
            app:z_toolbar_centerTextSize="14sp"
            app:z_toolbar_rightType="imageButton"
            app:z_toolbar_rightImageResource="@drawable/ic_clear_black_24dp"
            />

        <com.warkiz.widget.IndicatorStayLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            >

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_max="100"
                app:isb_min="10"
                app:isb_progress="50"
                app:isb_seek_smoothly="true"
                app:isb_show_tick_texts="true"
                app:isb_track_progress_color="@color/colorPrimary"
                app:isb_track_background_color="@color/switcher_normal_color"
                app:isb_thumb_color="@color/colorPrimary"
                app:isb_thumb_text_color="@color/colorPrimary"
                app:isb_show_indicator="circular_bubble"
                app:isb_indicator_color="@color/colorPrimary"
                />

        </com.warkiz.widget.IndicatorStayLayout>



        <com.zpj.shouji.market.ui.widget.CheckLayout
            android:id="@+id/check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:z_setting_titleText="使用系统默认亮度"
            android:layout_marginBottom="8dp"
            />

    </LinearLayout>

</com.lihang.ShadowLayout>