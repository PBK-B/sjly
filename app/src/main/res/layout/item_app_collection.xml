<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"


    app:hl_cornerRadius="8dp"
    app:hl_shadowColor="#80cccccc"
    app:hl_shadowLimit="8dp"
    >

    <com.shehuan.niv.NiceImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:corner_radius="8dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <com.shehuan.niv.NiceImageView
                android:id="@+id/item_icon_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"
                app:border_width="1dp"
                app:border_color="#80cccccc"
                android:layout_margin="2dp"
                app:is_circle="true"
                />

            <com.shehuan.niv.NiceImageView
                android:id="@+id/item_icon_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"
                app:border_width="1dp"
                app:border_color="#80cccccc"
                android:layout_margin="2dp"
                app:is_circle="true"
                />

            <com.shehuan.niv.NiceImageView
                android:id="@+id/item_icon_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"
                app:border_width="1dp"
                app:border_color="#80cccccc"
                android:layout_margin="2dp"
                app:is_circle="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tv_view_count"
                android:drawableStart="@drawable/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100k"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/tv_favorite_count"
                android:drawableStart="@drawable/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100k"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:drawablePadding="2dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/tv_support_count"
                android:drawableStart="@drawable/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="这里显示应用集名"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />



    </LinearLayout>

</com.lihang.ShadowLayout>