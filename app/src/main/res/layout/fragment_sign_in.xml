<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:id="@+id/ll_go_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="180"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="去注册"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

    <com.zpj.shouji.market.ui.widget.input.AccountInputView2
        android:id="@+id/piv_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <com.zpj.shouji.market.ui.widget.input.PasswordInputView2
        android:id="@+id/piv_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/piv_login_account"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <com.zpj.shouji.market.ui.widget.input.SubmitView
        android:id="@+id/sv_login"
        style="@style/button_submit"
        android:layout_below="@+id/piv_login_password"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="登录"
        app:sv_bindEditText1="@+id/piv_login_account"
        app:sv_bindEditText2="@+id/piv_login_password" />

</LinearLayout>

