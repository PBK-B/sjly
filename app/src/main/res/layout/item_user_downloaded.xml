<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

<!--    android:background="@drawable/bottom_line_gray"-->

    <com.shehuan.niv.NiceImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/icon_app"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_apk"
        android:layout_centerVertical="true"
        app:is_circle="true"
        android:tint="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_toEndOf="@+id/icon_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="?attr/textColorMajor"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="手机乐园S" />

        <TextView
            android:id="@+id/text_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="com.zpj.sjly"
            android:textColor="?attr/textColorNormal"
            />

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="?attr/textColorMinor"
            android:textSize="12sp"
            android:text="100MB | 于2015-02-06下载" />

    </LinearLayout>

</RelativeLayout>