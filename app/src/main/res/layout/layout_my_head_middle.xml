<?xml version="1.0" encoding="utf-8"?>
<com.zpj.shouji.market.ui.widget.DisInterceptNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/middle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:tag="middle"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:text="Lover's Day"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:paddingLeft="15dp"
                android:text="music、dance、drive、fly~O(∩_∩)O~"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f5f5f5" />

        <include layout="@layout/layout_my_tools" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <www.linwg.org.lib.LCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:shadowSize="10dp"
                app:shadowColor="#f5f5f5"
                app:shadowStartAlpha="10"
                app:cornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="云备份"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:padding="10dp"
                        android:textColor="@color/color_text_major"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="意见反馈"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:padding="10dp"
                        android:textColor="@color/color_text_major"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="夜间模式"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:padding="10dp"
                        android:textColor="@color/color_text_major"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="设置"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:padding="10dp"
                        android:textColor="@color/color_text_major"
                        />

                </LinearLayout>

            </www.linwg.org.lib.LCardView>

        </LinearLayout>

    </LinearLayout>
</com.zpj.shouji.market.ui.widget.DisInterceptNestedScrollView>