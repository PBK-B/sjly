<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <www.linwg.org.lib.LCardView
        android:id="@+id/cv_item1"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#63c422"
        app:cornerRadius="4dp"
        app:shadowColor="#5f6379"
        app:shadowFluidShape="adsorption"
        app:shadowSize="8dp"
        app:shadowStartAlpha="40">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_assessment_white_24dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="软件排行" />

    </www.linwg.org.lib.LCardView>

    <www.linwg.org.lib.LCardView
        android:id="@+id/cv_item2"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#4e99ff"
        app:cornerRadius="4dp"
        app:shadowColor="#5f6379"
        app:shadowFluidShape="adsorption"
        app:shadowSize="8dp"
        app:shadowStartAlpha="40">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_widgets_white_24dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="软件分类" />

    </www.linwg.org.lib.LCardView>



</LinearLayout>