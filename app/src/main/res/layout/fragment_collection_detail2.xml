<?xml version="1.0" encoding="utf-8"?>
<com.zpj.widget.statelayout.StateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/state_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    app:statusBarScrim="@color/transparent"
                    app:contentScrim="@color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:layout_marginBottom="-48dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0"
                        >

                        <ImageView
                            android:id="@+id/iv_header"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_member_default"
                            android:tint="#40000000"
                            />

                        <LinearLayout
                            android:id="@+id/layout_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="100dp"
                            android:orientation="vertical"
                            android:layout_marginBottom="48dp"
                            >

                            <LinearLayout
                                android:id="@+id/wrap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                >

                                <com.shehuan.niv.NiceImageView
                                    android:id="@+id/iv_icon"
                                    android:layout_width="160dp"
                                    android:layout_height="160dp"
                                    android:src="@mipmap/ic_launcher"
                                    android:scaleType="centerCrop"
                                    app:corner_radius="8dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/iv_icon"
                                    android:layout_marginStart="20dp"
                                    android:orientation="vertical"
                                    >

                                    <TextView
                                        android:id="@+id/tv_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="title"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        >

                                        <com.shehuan.niv.NiceImageView
                                            android:id="@+id/iv_avatar"
                                            android:layout_width="36dp"
                                            android:layout_height="36dp"
                                            android:src="@mipmap/ic_launcher"
                                            android:layout_gravity="center"
                                            app:is_circle="true"
                                            app:border_color="@color/white"
                                            app:border_width="1dp"
                                            />

                                        <com.zpj.shouji.market.ui.widget.DrawableTintTextView
                                            android:id="@+id/tv_user_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="userName"
                                            android:textColor="@android:color/white"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                                            app:drawable_tint_color="@color/white"
                                            android:layout_marginStart="8dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="fkhdrghdjkfghnbdjfbkfkgnbf"
                                        android:textColor="@android:color/white"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/wrap"
                                android:layout_alignParentBottom="true"
                                android:padding="10dp"
                                >

                                <TextView
                                    android:id="@+id/tv_support"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/ic_thumb_up_white_24dp"
                                    android:text="100"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    />

                                <TextView
                                    android:id="@+id/tv_favorite"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/ic_favorite_border_white_24dp"
                                    android:text="100"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    />

                                <TextView
                                    android:id="@+id/tv_view"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/ic_remove_red_eye_white_24dp"
                                    android:text="100"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    />

                                <TextView
                                    android:id="@+id/tv_download"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/ic_file_download_white_24dp"
                                    android:text="下载"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@color/transparent"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:layout_collapseMode="pin"
                        app:contentInsetStart="0dp"
                        >

                        <com.zpj.widget.toolbar.ZToolBar
                            android:id="@+id/tool_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:z_toolbar_fillStatusBar="true"
                            app:z_toolbar_statusBarColor="@color/transparent"
                            app:z_toolbar_titleBarColor="@color/transparent"
                            app:z_toolbar_isLightStyle="true"
                            app:z_toolbar_leftType="imageButton"
                            app:z_toolbar_leftImageResource="@drawable/ic_arrow_back_white_24dp"
                            app:z_toolbar_centerType="customView"
                            app:z_toolbar_centerCustomView="@layout/layout_profile_header"
                            app:z_toolbar_rightType="imageButton"
                            app:z_toolbar_rightImageResource="@drawable/ic_more_vert_grey_24dp"
                            />

                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.CollapsingToolbarLayout>

                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/magic_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/magic_indicator_bg"
                    android:padding="8dp"
                    />

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_white_24dp"
            android:layout_margin="24dp"
            android:tint="@color/white"
            android:layout_gravity="bottom|end"
            />

    </FrameLayout>

</com.zpj.widget.statelayout.StateLayout>