<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">Library</string>
    <string name="titlebar_search_hint">Search</string>
    <declare-styleable name="CommonTitleBar">
        <!-- 标题栏背景 图片或颜色 -->
        <attr format="color" name="titleBar_titleBarColor"/>
        <!-- 填充状态栏 -->
        <attr format="boolean" name="titleBar_fillStatusBar"/>
        <!-- 状态栏颜色 -->
        <attr format="color" name="titleBar_statusBarColor"/>
        <!-- 状态栏模式 -->
        <attr format="enum" name="titleBar_statusBarMode">
            <enum name="dark" value="0"/>
            <enum name="light" value="1"/>
        </attr>
        <!-- 标题栏高度 -->
        <attr format="dimension" name="titleBar_titleBarHeight"/>
        <!-- 显示标题栏分割线 -->
        <attr format="boolean" name="titleBar_showBottomLine"/>
        <!-- 标题栏分割线颜色 -->
        <attr format="color" name="titleBar_bottomLineColor"/>
        <!-- 底部阴影高度 showBottomLine = false时有效 -->
        <attr format="dimension" name="titleBar_bottomShadowHeight"/>

        <!-- 左边视图类型 -->
        <attr name="titleBar_leftType">
            <enum name="none" value="0"/>
            <enum name="textView" value="1"/>
            <enum name="imageButton" value="2"/>
            <enum name="customView" value="3"/>
        </attr>
        <!-- TextView 文字, 对应leftType_TextView -->
        <attr format="string" name="titleBar_leftText"/>
        <!-- TextView 颜色, 对应leftType_TextView -->
        <attr format="color" name="titleBar_leftTextColor"/>
        <!-- TextView 字体大小, 对应leftType_TextView -->
        <attr format="dimension" name="titleBar_leftTextSize"/>
        <!-- TextView 左边图片, 对应leftType_TextView -->
        <attr format="reference" name="titleBar_leftDrawable"/>
        <!-- TextView 左边padding, 对应leftType_TextView -->
        <attr format="dimension" name="titleBar_leftDrawablePadding"/>
        <!-- ImageView 资源, 对应leftType_ImageBotton -->
        <attr format="reference" name="titleBar_leftImageResource"/>
        <!-- 左边自定义布局, 对应leftType_CustomView -->
        <attr format="reference" name="titleBar_leftCustomView"/>

        <!-- 右边视图类型 -->
        <attr name="titleBar_rightType">
            <enum name="none" value="0"/>
            <enum name="textView" value="1"/>
            <enum name="imageButton" value="2"/>
            <enum name="customView" value="3"/>
        </attr>
        <!-- TextView 文字, 对应rightType_TextView -->
        <attr format="string" name="titleBar_rightText"/>
        <!-- TextView 颜色, 对应rightType_TextView -->
        <attr format="color" name="titleBar_rightTextColor"/>
        <!-- TextView 字体大小, 对应rightType_TextView -->
        <attr format="dimension" name="titleBar_rightTextSize"/>
        <!-- ImageView 资源, 对应rightType_ImageBotton -->
        <attr format="reference" name="titleBar_rightImageResource"/>
        <!-- 右边自定义布局, 对应rightType_CustomView -->
        <attr format="reference" name="titleBar_rightCustomView"/>

        <!-- 中间视图类型 -->
        <attr name="titleBar_centerType">
            <enum name="none" value="0"/>
            <enum name="textView" value="1"/>
            <enum name="searchView" value="2"/>
            <enum name="customView" value="3"/>
        </attr>
        <attr name="titleBar_centerSearchRightType">
            <enum name="voice" value="0"/>
            <enum name="delete" value="1"/>
        </attr>
        <!-- TextView 文字, 对应centerType_TextView -->
        <attr format="string" name="titleBar_centerText"/>
        <!-- TextView 颜色, 对应centerType_TextView -->
        <attr format="color" name="titleBar_centerTextColor"/>
        <!-- TextView 字体大小, 对应centerType_TextView -->
        <attr format="dimension" name="titleBar_centerTextSize"/>
        <!-- TextView 跑马灯效果, 默认打开, 对应centerType_TextView -->
        <attr format="boolean" name="titleBar_centerTextMarquee"/>
        <!-- 子标题TextView 文字, 对应centerType_TextView -->
        <attr format="string" name="titleBar_centerSubText"/>
        <!-- 子标题TextView 颜色, 对应centerType_TextView -->
        <attr format="color" name="titleBar_centerSubTextColor"/>
        <!-- 子标题TextView 字体大小, 对应centerType_TextView -->
        <attr format="dimension" name="titleBar_centerSubTextSize"/>
        <!-- 搜索输入框是否可输入 -->
        <attr format="boolean" name="titleBar_centerSearchEditable"/>
        <!-- 搜索框背景 -->
        <attr format="reference" name="titleBar_centerSearchBg"/>
        <!-- 中间自定义布局, 对应centerType_CustomView -->
        <attr format="reference" name="titleBar_centerCustomView"/>
    </declare-styleable>
</resources>